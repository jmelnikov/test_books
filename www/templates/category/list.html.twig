{% extends 'base.html.twig' %}

{% block title %}Список категорий{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Родительская категория</th>
                        <th scope="col">Название категории</th>
                        <th scope="col">Книг в категории</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <th scope="row">{{ category.id }}</th>
                            <td>
                                {% if category.parent is not empty %}
                                {{ category.parent.name }}
                                {% else %}
                                    <em class="text-muted small">Не указана</em>
                                {% endif %}
                            </td>
                            <td><a href="{{ path('category.get', {id: category.id}) }}">{{ category.name }}</a></td>
                            <td>{{ category.books.count }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
