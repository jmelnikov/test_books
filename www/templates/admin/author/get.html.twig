{% extends 'base.html.twig' %}

{% block title %}Список авторов{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <h3>{{ author.name }}</h3>
            <p>Книг: {{ author.books.count }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                    data-bs-target="#editCategoryModal">
                Редактировать
            </button>
            {# Modal #}
            <div class="modal fade" id="editCategoryModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <form method="post" action="{{ path('admin.author.save', {id: author.id}) }}">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Редактирование автора</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="authorName" class="form-label">Имя автора</label>
                                    <input type="text" class="form-control" id="authorName" name="authorName"
                                           value="{{ author.name }}">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                                <button type="submit" class="btn btn-primary">Сохранить</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <hr/>
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Название</th>
                        <th scope="col">Год выпуска</th>
                        <th scope="col">ISBN</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for book in author.books %}
                        <tr>
                            <th scope="row">{{ book.id }}</th>
                            <td><a href="{{ path('books.get', {id: book.id}) }}">{{ book.title }}</a></td>
                            <td>{{ book.publishDate|date('Y') }}</td>
                            <td>{{ book.isbn }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
