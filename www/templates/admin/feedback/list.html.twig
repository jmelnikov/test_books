{% extends 'base.html.twig' %}

{% block title %}Feedback{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Email</th>
                    <th scope="col">Телефон</th>
                    <th scope="col">Действие</th>
                </tr>
                </thead>
                <tbody>
                {% for feedback in feedbacks %}
                <tr>
                    <th scope="row">{{ feedback.id }}</th>
                    <td>{{ feedback.name ?? '<em class="text-muted small">Не указано</em>' }}</td>
                    <td>{{ feedback.email }}</td>
                    <td>{{ feedback.phone ?? '<em class="text-muted small">Не указан</em>' }}</td>
                    <td><a href="{{ path('admin.feedback.get', {id: feedback.id}) }}">{{ feedback.message|slice(0,50) }}...</a></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
